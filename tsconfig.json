{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "sourceMap": true,
    "rootDir": "./"
  },
  "include": [
    "tests/**/*.ts",
    "src/pages/**/*.ts",
    "src/utils/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}