{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "dist"
  },
  "include": [
    "tests/**/*.ts",
    "pageObjects/**/*.ts",
    "utils/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
